<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/register_line1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号："
            android:textSize="18sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/reg_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入要注册的账号"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/register_line1">

        <TextView
            android:id="@+id/reg_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textSize="18sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/reg_pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="请输入要注册的密码"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/register_line2">

        <TextView
            android:id="@+id/reg_repwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textSize="18sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/reg_repwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="请再次输入密码"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/register_line3">

        <TextView
            android:id="@+id/Verification_Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码："
            android:textSize="18sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/Verification_Code_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入验证码"/>

        <Button
            android:id="@+id/Verification_Code_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="获取验证码"
            android:textColor="#000000"
            android:background="@drawable/button_bg"/>

    </LinearLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_line4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="注册"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="@drawable/button_bg"/>

    <Button
        android:id="@+id/register_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:text="取消"
        android:textSize="20sp"
        android:background="@drawable/button_bg"/>

</RelativeLayout>
