<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/change"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/change_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/change_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textSize="18sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/change_pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="请输入重新设置的密码"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/change_line1">

        <TextView
            android:id="@+id/change_repwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textSize="18sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/change_repwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="请再次输入重新设置的密码"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/change_line2">

        <TextView
            android:id="@+id/change_Verification_Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码："
            android:textSize="18sp"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/change_Verification_Code_edit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入验证码"/>

        <Button
            android:id="@+id/change_Verification_Code_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="获取验证码"
            android:textColor="#000000"
            android:background="@drawable/button_bg"/>

    </LinearLayout>

    <Button
        android:id="@+id/changepwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_line3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="修改密码"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="@drawable/button_bg"/>

    <Button
        android:id="@+id/change_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/changepwd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:text="取消"
        android:textSize="20sp"
        android:background="@drawable/button_bg"/>

</RelativeLayout>
